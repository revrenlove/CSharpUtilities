{
	"name": "c-sharp-utilities",
	"displayName": "C# Utilities",
	"description": "Workflow enhancements for C# development",
	"keywords": [
		"c#",
		"csharp",
		".net",
		"dotnet"
	],
	"license": "MIT",
	"repository": {
		"url": "https://github.com/revrenlove/CSharpUtilities"
	},
	"icon": "assets/images/logo.png",
	"publisher": "revrenlove",
	"version": "0.4.0",
	"engines": {
		"vscode": "^1.63.0"
	},
	"bugs": {
		"url": "https://github.com/revrenlove/CSharpUtilities/issues"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "c-sharp-utilities.addClass",
				"title": "Class"
			},
			{
				"command": "c-sharp-utilities.addInterface",
				"title": "Interface"
			},
			{
				"command": "c-sharp-utilities.addRecord",
				"title": "Record"
			},
			{
				"command": "c-sharp-utilities.addEnum",
				"title": "Enum"
			},
			{
				"command": "c-sharp-utilities.addStruct",
				"title": "Struct"
			},
			{
				"command": "c-sharp-utilities.manageProjectReferences",
				"title": "Manage Project References..."
			}
		],
		"menus": {
			"explorer/context": [
				{
					"submenu": "cSharp.addItem",
					"when": "resourceExtname == .csproj || resourceExtname == .cs || explorerResourceIsFolder"
				},
				{
					"command": "c-sharp-utilities.manageProjectReferences",
					"when": "resourceExtname == .csproj"
				}
			],
			"cSharp.addItem": [
				{
					"command": "c-sharp-utilities.addClass"
				},
				{
					"command": "c-sharp-utilities.addInterface"
				},
				{
					"command": "c-sharp-utilities.addRecord"
				},
				{
					"command": "c-sharp-utilities.addEnum"
				},
				{
					"command": "c-sharp-utilities.addStruct"
				}
			],
			"commandPalette": [
				{
					"command": "c-sharp-utilities.addClass",
					"when": "false"
				},
				{
					"command": "c-sharp-utilities.addInterface",
					"when": "false"
				},
				{
					"command": "c-sharp-utilities.addRecord",
					"when": "false"
				},
				{
					"command": "c-sharp-utilities.addEnum",
					"when": "false"
				},
				{
					"command": "c-sharp-utilities.addStruct",
					"when": "false"
				}
			]
		},
		"submenus": [
			{
				"id": "cSharp.addItem",
				"label": "Add C# Item..."
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./ && npm run copy-static",
		"watch": "npm run copy-static && tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"copy-static": "copyfiles -u 1 ./**/*.tmpl ./out",
		"deploy": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"copyfiles": "^2.4.1",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"vsce": "^1.103.1"
	},
	"dependencies": {
		"fast-xml-parser": "^3.19.0",
		"inversify": "^5.0.5",
		"reflect-metadata": "^0.1.13",
		"ts-md5": "^1.2.11",
		"util": "^0.12.3"
	}
}
